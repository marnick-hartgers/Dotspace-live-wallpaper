<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DotParallaxSettingsFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Effects"
                android:textColor="@color/defaultText"
                android:textSize="12pt" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/amount"
                android:textColor="@color/defaultText"
                android:textSize="18sp" />

            <SeekBar
                android:id="@+id/seekBarParallaxAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="80" />

            <Switch
                android:id="@+id/switchParallaxInvertDepth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/invert_parallax_depth_effect"
                android:textColor="@color/defaultText"
                tools:layout_editor_absoluteX="164dp"
                tools:layout_editor_absoluteY="365dp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Motionblur"
                android:textColor="@color/defaultText"
                android:textSize="18sp" />

            <SeekBar
                android:id="@+id/seekBarMotionBlur"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:progress="80" />
        </LinearLayout>
    </ScrollView>

</FrameLayout>